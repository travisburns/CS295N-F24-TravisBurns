@model Blog
@{
    ViewData["Title"] = "Blog";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-12 mx-auto">
            <form method="post" class="mt-4">
                <div class="form-group mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" name="BlogTitle" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input id="author" name="BlogAuthor" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label for="reviewer" class="form-label">Reviewer</label>
                    <input id="reviewer" name="BlogName" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label for="text" class="form-label">Review</label>
                    <textarea id="text" name="BlogText" class="form-control" rows="4" required></textarea>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>